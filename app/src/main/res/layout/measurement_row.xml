<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/lastUpdateTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTextView"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unitTextView2"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/descriptionTextView"
                android:layout_alignBottom="@id/descriptionTextView"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/descriptionTextView"
                android:text="m"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/deleteBtn"
                android:layout_marginStart="6dp"
                android:layout_marginTop="0dp"
                android:text="body part goes here"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/descriptionTextView"
                android:layout_alignBottom="@id/descriptionTextView"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/unitTextView2"
                android:text="0"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>